    <br>
    <div class="card weather-card">
        <div class="date">
            <div class="padding">Tuesday</div>
            <div class="padding">11th April 2023</div>
        </div>
        <div class="display-3 padding city">Delhi</div>
        <div class="display-1 temp padding">28&#176C</div>
        <div class="condition padding">15:14 &nbsp;&nbsp;&nbsp;Mostly Clear</div>
        <div class="contents">
            <div class="card ele">
                Sunset <br>
                <div class="display-6">18:25pm</div>
            </div>
            <div class="card ele">
                Wind Speed<br>
                <div class="display-6 windSpeed">4 m/s</div>
            </div>
            <div class="card ele">
                Humidity<br>
                <div class="display-6 aqi">34%</div>
            </div>
        </div>

    </div>
    <br>
    <section class="colored-section center" id="cta">
        <div class="container-fluid">
            <h3 class="big-heading">Find Weather of any City</h3>
            <form action="index3" method="get">
                <input type="text" class="textbox" name="city">
                <br>
                <br>
                <br>
                <button class="download-button btn btn-lg btn-outline-light Search" type="button"><i>Search</i></button>
            </form>
        </div>
    </section>
    <footer class="white-section" id="footer">
        <div class="container-fluid">
            <i class="social-icon fab fa-facebook-f icon "></i>
            <i class="social-icon fab fa-twitter icon"></i>
            <i class="social-icon fab fa-instagram icon"></i>
            <i class="social-icon fas fa-envelope icon"></i>
            <p>Â© Copyright Bhavya Anand</p>
        </div>
    </footer>
    <script>

        const cityInput = document.getElementsByClassName('textbox')[0];
        const button = document.getElementsByClassName('download-button')[0];
        const card = document.getElementsByClassName('weather-card')[0];

        button.addEventListener('click', (event) => {
            event.preventDefault();
            const city = cityInput.value;

            if (city) {
                fetch(`/index3?city=${city}`)
                    .then(response => response.json())
                    .then(data => {
                        if (!data || !data.temp || !data.windSpeed || !data.humidity) {
                            throw new Error('Invalid response from server');
                        }

                        const temperature = data.temp;
                        const windSpeed = data.windSpeed;
                        const humidity = data.humidity;

                        card.innerHTML = `<div class="date">
                                        <div class="padding">Tuesday</div>
                                        <div class="padding">11th April 2023</div>
                                        </div>
                                        <div class="display-3 padding city">${city}</div>
                                        <div class="display-1 temp padding">${temperature}&#176C</div>
                                        <div class="condition padding">15:14 &nbsp;&nbsp;&nbsp;Mostly Clear</div>
                                        <div class="contents">
                                        <div class="card ele">
                                            Sunset <br>
                                        <div class="display-6">18:25pm</div>
                                     </div>
                                        <div class="card ele">
                                        Wind Speed<br>
                                        <div class="display-6 windSpeed">${windSpeed}m/s</div>
                                        </div>
                                        <div class="card ele">
                                        Humidity<br>
                                        <div class="display-6 aqi">${humidity}%</div>
                                        </div>
                                        </div>`;
                    })
                    .catch(error => {
                        console.error(error);
                        card.innerHTML = 'Error retrieving weather data';
                    });
            }
        });

    </script>
</body>

</html>